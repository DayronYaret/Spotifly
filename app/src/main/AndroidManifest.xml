<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.ulpgc.dayron.spotifly">

    <application
        android:name=".app.AppMediator"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".addFriends.AddFriendsActivity"></activity>
        <activity android:name=".addSongs.AddSongsActivity"></activity>
        <activity android:name=".forgotPassword.ForgotPasswordActivity"></activity>
        <activity android:name=".friends.FriendsActivity"></activity>
        <activity android:name=".friendSong.FriendSongActivity"></activity>
        <activity android:name=".player.PlayerActivity"></activity>
        <activity android:name=".register.RegisterActivity"></activity>
        <activity android:name=".songs.SongsActivity"></activity>
    </application>

</manifest>