<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="es.ulpgc.dayron.spotifly">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL"
        tools:ignore="ProtectedPermissions" />

    <application
        android:name=".app.AppMediator"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".songs.SongsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".addFriends.AddFriendsActivity"></activity>
        <activity android:name=".addSongs.AddSongsActivity"></activity>
        <activity android:name=".forgotPassword.ForgotPasswordActivity"></activity>
        <activity android:name=".friends.FriendsActivity"></activity>
        <activity android:name=".friendSong.FriendSongActivity"></activity>
        <activity android:name=".player.PlayerActivity"></activity>
        <activity android:name=".register.RegisterActivity"></activity>
        <activity android:name=".login.LoginActivity"></activity>
    </application>

</manifest>